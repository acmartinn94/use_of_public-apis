    <body>
        <div class="d-flex flex-column min-vh-100 m-0 p-0">
        <header class="py-4 mb-1  "> 
            <div class="container-fluid d-grid gap-3 justify-content-center">
            
            <div class="d-flex align-items-center">
                <form class="search-form mx-auto" role="search" action="/search" method="GET">
                    <input 
                        type="search"
                        name="bebida"
                        class="form-control"
                        placeholder="Search..."
                        aria-label="Search">
                </form>
            
            </div> 
            </div>
        </header>

        <div class="row flex-lg-row-reverse align-items-center g-5 gy-0 descriptionproduct ps-5 border-bottom" style="--bs-border-color: #000;"> 
            
            <div class="col-lg-6"> 
                <h1 class="display-5 fw-bold tdext-body-emphasis lh-1"><%=locals.drinks[0].strDrink%></h1>
                <h2 class="display-5 fs-4 fw-bold tdext-body-emphasis lh-1">Ingredients</h2>
                <div class="row row-cols-3 row-cols-sm-4 row-cols-md-5 row-cols-lg-6 g-3 ">
                    <% for(var i=0;i<=14;i++){ %>
                        <%if(drinks[0][`strMeasure${i}`]){%>
                            <div class="col text-center ">
                                    <div class="ingredient-grid">
                                        <img 
                                            src="https://www.thecocktaildb.com/images/ingredients/<%=drinks[0][`strIngredient${i}`]%>-small.png" 
                                            class="d-block mx-lg-auto img-fluid" 
                                            alt="Bootstrap Themes" 
                                            loading="lazy">
                                    
                               
                                    </div>
                                    <p class="card-text mb-0" style="font-size: 0.9rem;"><%=drinks[0][`strMeasure${i}`]+" "+drinks[0][`strIngredient${i}`]%></p>
                                    
                            </div> 
                                

                        <%}%>
                
                    <%}%>
                </div>
                
                
                <h2 class="display-5 fs-4  fw-bold tdext-body-emphasis lh-1 ps-5">Instructions</h2> 
                <p class="ps-5"><%=drinks[0].strInstructions%></p>

                
                  
            </div>
            <div class="col-lg-6 drink-cards"style="height: 100%; max-width: 900px; overflow: hidden;"> 
                <img 
                    src="<%=drinks[0].strDrinkThumb%>" 
                    class="d-block mx-auto img-fluid"
                    style="width: 100%; height: 100%; object-fit: cover;margin-top: 28px;">
                    alt="Bootstrap Themes" 
                    width="700" 
                    height="500" 
                    loading="lazy">
            </div> 
             
        </div>
